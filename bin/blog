#!/usr/bin/env ruby

require 'bundler/setup'
require "ogp"
require "net/http"
require "openssl"
require "uri"
require "rss"
require "json"

# SSL cert store without CRL checking (avoids "unable to get certificate CRL" on macOS/Ruby 3.4+)
def ssl_cert_store
  @ssl_cert_store ||= begin
    store = OpenSSL::X509::Store.new
    store.set_default_paths
    store
  end
end

def https_get(uri, headers = {})
  uri = URI(uri) if uri.is_a?(String)
  http = Net::HTTP.new(uri.host, uri.port)
  http.use_ssl = (uri.scheme == "https")
  if http.use_ssl?
    http.cert_store = ssl_cert_store
  end
  request = Net::HTTP::Get.new(uri.request_uri)
  headers.each { |k, v| request[k] = v }
  http.request(request)
end

# Start with devto
puts "Pulling Dev.to"

URL = "https://dev.to/api/articles?username=jules2689"
resp = https_get(URL, "User-Agent" => "jules2689/website")

blog_articles = JSON.parse(resp.body)
blog_articles.each { |a| a["readable_publish_date"] = Time.parse(a["published_at"]).strftime('%b %d, %Y') }

