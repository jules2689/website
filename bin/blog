  "url" => "https://devproductivity.github.io/devproductivity.io/shopify-developer-environments-p1.html",
}

# Add Medium
puts "Pulling medium"
MEDIUM_URL = "https://medium.com/feed/@jules2689"
feed = RSS::Parser.parse(https_get(MEDIUM_URL).body)
puts "Title: #{feed.channel.title}"
feed.items.each do |item|
  puts "Item: #{item.title}"
  url = URI(item.link)
  url.query = nil
  puts url.to_s
  open_graph = begin
    OGP::OpenGraph.new(https_get(url).body)
  rescue OGP::MissingAttributeError
    OpenStruct.new(image: OpenStruct.new(url: "/images/generic.jpg"))
  end

  # Download image if it's not already local
  extension = File.extname(open_graph.image.url)
  if extension.empty?
    open_graph = OpenStruct.new(image: OpenStruct.new(url: "/images/generic.jpg"))
  end

  if open_graph.image.url.start_with?('http')
    image_filename = "/images/#{open_graph.image.url.split('/').last}"
    if !File.exist?(image_filename)
      path = File.expand_path("../../source/", __FILE__)
      puts "Writing image to #{path}"
      File.write(File.join(path, image_filename), https_get(open_graph.image.url).body)
    end
  else
    image_filename = open_graph.image.url
  end

  blog_articles << {
    "title" => item.title,
    "social_image" => image_filename,
    "description" => item.content_encoded.gsub(/<\/?[^>]*>/, "")[0..140] + "...",
    "readable_publish_date" => item.pubDate.strftime('%b %d, %Y'), # TODO: Human Readable
    "url" => url
  }
end

puts "Sorting posts by published date"
blog_articles = blog_articles.sort_by { |a| -Time.parse(a["readable_publish_date"]).to_i }

puts "Outputting file"
File.write("data/blog.json", blog_articles.to_json)
