source 'https://rubygems.org'

# Middleman 4.5+ requires Bundler 2. Use: bundle _2.7.2_ exec middleman server
# (or: gem install bundler -v 2.7.2 and then bundle exec)

# Required for Ruby 3.0+: former stdlib gems no longer bundled
gem 'mutex_m'   # Ruby 3.4+
gem 'ostruct'   # ogp gem / Ruby 3.5+ (no longer default gem)
gem 'rss'       # bin/blog (removed from stdlib in Ruby 3.4)
gem 'webrick'  # dev server (removed from stdlib in Ruby 3.0)

gem 'middleman', '~> 4.5'
gem 'tzinfo-data', platforms: [:mswin, :mingw, :jruby, :x64_mingw]
gem 'wdm', '~> 0.1', platforms: [:mswin, :mingw, :x64_mingw]
gem 'ogp'
